<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/more_button_product"
        android:id="@+id/b_popup_deleteUser"
        android:background="@color/zxing_transparent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="name_ type"
        android:layout_width="0dp"
        android:textColor="@color/user_listview_row"
        android:layout_height="wrap_content"
        android:id="@+id/tv_userNameType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_popup_deleteUser" />

    <TextView
        android:text="branch"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:textColor="@color/user_listview_row"
        android:id="@+id/tv_userAtBranch"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_userNameType"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.54" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:textColor="#65afc6"
        android:id="@+id/tv_userPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/tv_userAtBranch"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton_call"
        app:layout_constraintHorizontal_bias="0.66"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/call"
        android:background="@color/zxing_transparent"
        android:id="@+id/imageButton_call"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_userPhoneNumber" />

    <TextView
        android:text="permissions"
        android:layout_width="0dp"
        android:textColor="@color/user_listview_row"
        android:layout_height="wrap_content"
        android:id="@+id/tv_userPermition"
        android:inputType="textMultiLine"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_userPhoneNumber"
        app:layout_constraintHorizontal_bias="0.43" />
</android.support.constraint.ConstraintLayout>